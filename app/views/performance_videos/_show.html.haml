%article.video
  %h4= @performance_video.title
  %section.edit-icons
    - if user_signed_in?
      = link_to image_tag("icons/edit_black.png"), edit_performance_video_path
      = link_to image_tag("icons/delete_black.png"), performance_video_path, method: :delete,
        data: { confirm: "Are you sure you'd like to delete video #{@performance_video.title}?" }
  %br
  %iframe(width="432" height="243" frameborder="0" allowfullscreen){src: @performance_video.link.sub("watch?v=", "embed/")}
