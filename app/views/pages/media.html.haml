:ruby
  title = 'Media | Cal Raijin Taiko'
  description = "Photos and videos of Cal Raijin Taiko's past performances."
  image = URI.join(root_url, image_path('logo.png'))

  meta title: title, description: description,
       og: { title: title, description: description, image: image,
             url: request.original_url }

- if @performances.length > 0
  %header.row
    %h1.small-12.column PHOTO GALLERIES

  %section.galleries-feed
    = render 'layouts/accordion', by_year: @performances_by_year, id: 1,
      partial: 'pages/galleries_feed', active_year: @galleries_active_year

%header.row
  %h1.small-10.column VIDEOS
  - if user_signed_in?
    = link_to 'Add Video', new_video_path,
      class: 'button small round column small-2 large-1'

%section.videos-feed
  = render 'layouts/accordion', by_year: @videos_by_year, id: 2,
    partial: 'videos/videos_feed', active_year: @videos_active_year
