<!DOCTYPE html>
<html>
<head>
  <title>Cal Taiko</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <%= favicon_link_tag '/favicon.ico' %>
  <%= favicon_link_tag 'favicon.png', :rel => 'icon', :type => 'image/png' %>

  <%= link_to image_tag("logo.png", :id => "logo"), root_url %>
  <br>
  <%= link_to "Home", root_url %>
  <%= link_to "Members", controller: 'members' %>
  <%= link_to "Upcoming Performances", '/performances/upcoming' %>
  <%= link_to "Past Performances", '/performances/past' %>
  <%= link_to "About Us", '/about' %>
  <%= link_to "Contact Us", '/contact' %>
</head>
<body>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>

</body>
</html>
