<section class="current-members">
  <% members.each do |member| %>
  <article class="member">

    <div class="member-image">
      <%= link_to image_tag(member.avatar.url(:thumb)), member_path(member) %>
      <p><%= member.name %></p>
    </div>

    <% if user_signed_in? %>
    <nav class="nav-buttons">
      <%= link_to 'Edit', edit_member_path(member) %>
      <%= link_to 'Delete', member_path(member),
          method: :delete, data: { confirm: 'Are you sure you\'d like to delete member ' + member.name + '?' } %>
    </nav>
    <% end %>
  </article>
  <% end %>
</section>
