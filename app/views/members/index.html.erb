<%= link_to image_tag("logo.png", :id => "logo"), root_url %>
<br>
<%= link_to "Members", controller: 'members' %>
<%= link_to "Upcoming Performances", controller: 'upcoming_performances' %>
<%= link_to "Past Performances", controller: 'past_performances' %>
<%= link_to "About Us", page_path('about') %>
<%= link_to "Contact Us", page_path('contact') %>

<h1>Listing Members</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
  </tr>
 
  <% @members.each do |member| %>
    <tr>
      <td><%= member.name %></td>
      <td><%= member.bio %></td>
      <td><%= link_to 'Show', member_path(member) %></td>
      <td><%= link_to 'Edit', edit_member_path(member) %></td>
      <td><%= link_to 'Delete', member_path(member),
              method: :delete, data: { confirm: 'Are you sure you\'d like to delete member ' + member.name + '?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Add New Member", new_member_path %>
