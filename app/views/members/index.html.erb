<%
   title = "Members | Cal Raijin Taiko"
   description = "The members of Cal Raijin Taiko."
   image = URI.join(root_url, image_path("logo.png"))

   meta title: title,
   description: description,
   og: {
   title: title,
   description: description,
   image: image,
   url: root_url + "members"
   }
%>

<header>
  <h2 class="link-header"><%= link_to "CURRENT MEMBERS", '/members/current' %></h2>
</header>
<%= render 'current_members', members: @current %>

<header>
  <h2 class="link-header"><%= link_to "ALUMNI", '/members/alumni' %></h2>
</header>
<%= render 'alumni_members', members: @alumni %>

<% if user_signed_in? %>
<div class="add-new">
  <%= link_to image_tag("icons/add.png"), new_member_path %>
</div>
<% end %>
