%section.current-members
  - members.each do |member|
    %article.member(itemscope itemtype="http://schema.org/Person")
      .member-image
        = link_to image_tag(member.avatar.url(:thumb), itemprop: "image"), member_path(member)
        %p(itemprop="name")= member.name

      - if user_signed_in?
        %section.edit-icons
          = link_to image_tag("icons/edit.png"), edit_member_path(member)
          = link_to image_tag("icons/delete.png"),
            member_path(member), method: :delete,
            data: { confirm: "Are you sure you'd like to delete member #{member.name}?" }
