- title = "Current Members | Cal Raijin Taiko"
- description = "The currently active members of Cal Raijin Taiko."
- image = URI.join(root_url, image_path("logo.png"))

- meta title: title,
  description: description,
  og: { title: title, description: description, image: image,
  url: request.original_url }

%header
  .row
    %h2.small-10.large-11.column CURRENT MEMBERS
    - if user_signed_in?
      = link_to "Add Member", new_member_path, class: "button small round small-2 large-1 column"

= render "current_members", members: @current

= render "gens", gens: @gens

- if user_signed_in?
  .row
    = link_to "Add Member", new_member_path, class: "button small round small-2 column"
