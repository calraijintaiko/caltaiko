- title = "Members | Cal Raijin Taiko"
- description = "The members of Cal Raijin Taiko"
- image = URI.join(root_url, image_path("logo.png"))

- meta title: title,
  description: description,
  og: { title: title, description: description, image: image,
  url: request.original_url }

%header
  %h2.link-header= link_to "CURRENT MEMBERS", "/members/current"
  - if user_signed_in?
    = link_to image_tag("icons/add.png"), new_member_path

= render "current_members", members: @current

= render "gens", gens: @gens

%header
  %h2.link-header.multi-headers= link_to "ALUMNI", "/members/alumni"
  - if user_signed_in?
    = link_to image_tag("icons/add.png"), new_member_path

= render "alumni_members", members: @alumni

- if user_signed_in?
  .add-new
    = link_to image_tag("icons/add.png"), new_member_path
