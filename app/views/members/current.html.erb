<%
   title = "Current Members | Cal Raijin Taiko"
   description = "The current active members of Cal Raijin Taiko."
   image = URI.join(root_url, image_path("logo.png"))

   meta title: title,
   description: description,
   og: {
   title: title,
   description: description,
   image: image,
   url: root_url + "members/current"
   }
%>

<header>
  <h2>CURRENT MEMBERS</h2>
</header>

<%= render 'current_members', members: @current %>

<% if user_signed_in? %>
<div class="add-new">
  <%= link_to image_tag("icons/add.png"), new_member_path %>
</div>
<% end %>
