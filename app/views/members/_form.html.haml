= form_for @member do |f|
  - if @member.errors.any?
    #error_explanation
      %h2
        = pluralize(@member.errors.count, "error")
        prohibited this member from being saved:
      %ul
        - @member.errors.full_messages.each do |msg|
          %li= msg

  %p
    = f.label :name
    %br
    = f.text_field :name

  %p
    = f.label :gen
    %br
    = f.number_field :gen

  %p
    = f.label :major
    %br
    = f.text_field :major

  %p
    = f.label :bio
    %br
    = f.text_area :bio

  %p
    = f.label :avatar
    %br
    = f.file_field :avatar
    = f.label :delete_avatar
    = f.check_box :delete_avatar

  %p
    = f.label :current
    = f.check_box :current

  .actions
    = f.submit
