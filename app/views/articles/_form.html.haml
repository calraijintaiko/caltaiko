= simple_form_for(@article) do |f|
  .row
    = f.error_notification

    .form-inputs
      .column.small-12
        = f.input :title, placeholder: "Article Title"
      .column.small-12
        = f.input :date, discard_hour: true, order: [:month, :day, :year], input_html: { class: "column small-4 left" }
      .column.small-12
        = f.input :text, placeholder: "Article Text"

    .small-7.column
      = f.input :image
    .small-2.column
      = f.input :delete_image, as: :boolean
    .small-2.column
      = f.input :current

    .column.small-5.large-4
      = f.button :submit, class: "button small"
    .column.small-7.large-8
      = link_to "Cancel", performances_path, class: "button small disabled"
