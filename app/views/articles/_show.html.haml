%article.article
  %h1= article.title
  - if user_signed_in?
    %section.edit-icons
      = link_to image_tag("icons/edit_black.png"), edit_article_path(article)
      = link_to image_tag("icons/delete_black.png"), articles_path(article), method: :delete,
        data: { confirm: "Are you sure you'd like to delete article '#{article.title}'?" }

  %small= article.date.strftime("%B %-d, %Y")
  :markdown
    #{article.text}
