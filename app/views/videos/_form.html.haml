= form_for(@video) do |f|
  - if @video.errors.any?
    #error_explanation
      %h2
        pluralize(@video.errors.count, "error")
        prohibited this video from being saved:
      %ul
        - @video.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    %br
    = f.text_field :title

  .field
    = f.label :year
    %br
    = f.number_field :year

  .field
    = f.label :link
    %br
    = f.text_field :link

  .actions
    = f.submit
