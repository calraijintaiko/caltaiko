- title = "#{@video.title} | Cal Raijin Taiko"
- description = "Watch the video of #{@video.title}"
- image = URI.join(root_url, image_path("logo.png"))

- meta title: title,
  description: description,
  og: { title: title, description: description, image: image,
  url: request.original_url }

= render "show", video: @video

= link_to image_tag("icons/back.png"), videos_path
