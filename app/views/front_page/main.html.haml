- title = "Cal Raijin Taiko"
- description = "Founded in 2005, Cal Raijin Taiko is UC Berkeley's Japanese drumming performance ensemble."
- image = URI.join(root_url, image_path("logo.png"))

- meta title: title,
  description: description,
  og: { title: title, description: description, image: image, url: root_url }

.row
  .column.medium-2.hide-for-small
    %p
  = image_tag("banner.png", class: "small-12 medium-8 column")
  .column.medium-2.hide-for-small
    %p

.row.group-description
  .column.small-12.text-justify
    :markdown
      Welcome! We are **Cal Raijin Taiko**, U.C. Berkeley's Japanese drumming performance ensemble. Founded in 2005, we perform for both the campus community and beyond to spread the **knowledge**, **love**, and **passion** of taiko.

- if @articles.length > 0
  %header.row
    %h1.small-10.column
      = link_to "NEWS", "/news"
    - if user_signed_in?
      = link_to "Add Article", new_article_path,
        class: "button small round hide-for-medium-down large-1 column"

  .news.row
    .carousel.column.small-12
      %ul(data-orbit)
        - @articles.each do |article|
          %li
            %a(href="#{article_path(article)}")
              = image_tag article.image.url(:carousel)
            .orbit-caption
              = article.title

%header.row
  %h1.small-10.column
    = link_to "UPCOMING PERFORMANCES", "/performances/upcoming"
  - if user_signed_in?
    = link_to "Add Performance", new_performance_path,
      class: "button small round hide-for-medium-down large-2 column"

= render "performances/performances_feed", performances: @performances


%header.row.hide-for-medium-down
  %h1.small-12.column
    = link_to "FACEBOOK", "https://www.facebook.com/calraijintaiko"

#fb-root
.row
  #fb-stuff.column.large-12.hide-for-medium-down
    #fb-feed
      .fb-like-box(data-href="https://www.facebook.com/calraijintaiko" data-width="970" data-height="600" data-colorscheme="light" data-show-faces="false" data-header="false" data-stream="true" data-show-border="true")
