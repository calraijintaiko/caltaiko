:ruby
  title = 'Upcoming Performances | Cal Raijin Taiko'
  description = "A few of Cal Raijin Taiko's upcoming performances." \
    " We perform at community and campus events all across the Bay Area."
  image = URI.join(root_url, image_path('logo.png'))

  meta title: title, description: description,
       og: { title: title, description: description, image: image,
             url: request.original_url }

%header.row
  %h1.column.small-10 UPCOMING PERFORMANCES
  - if user_signed_in?
    = link_to 'Add Performance', new_performance_path,
      class: 'button small round hide-for-medium-down large-2 column'

= render 'performances_feed', performances: @upcoming
