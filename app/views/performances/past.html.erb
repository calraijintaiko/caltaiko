<%
   title = "Cal Raijin Taiko | Past Performances"
   description = "A few of Cal Raijin Taiko's favorite past performances."
   image = URI.join(root_url, image_path("logo.png"))

   meta title: title,
   description: description,
   og: {
   title: title,
   description: description,
   image: image
   }
%>

<header>
<h1>Past Performances</h1>
</header> 

<%= render 'performances_feed', performances: @past %>

<% if user_signed_in? %>
<%= link_to "Add New Performance", new_performance_path, class: "add-new" %>
<% end %>
