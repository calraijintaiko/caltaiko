= simple_form_for(@performance) do |f|

  .row
    .small-5.large-3.column
      = f.input :date, start_year: 2005, end_year: Time.new.year + 1, ampm: true, minute_step: 15

  .row
    .small-12.large-9.column
      = f.input :title

  .row
    .small-12.large-7.column
      = f.input :location
    .small-12.large-5.column
      = f.input :link

  .row
    .small-12.column
      = f.input :description

  .row
    .small-7.column
      = f.input :banner
    .small-2.column
      = f.input :delete_banner, as: :boolean

  .row
    .small-12.large-8.column
      = f.input :images_link

  %section#nested_fields
    .row
      %h1.small-12.column Videos
    #performance_videos
      = f.simple_fields_for :performance_videos do |performance_video|
        = render "performance_video_fields", f: performance_video
      .row
        = link_to_add_association "Add Performance Video", f, :performance_videos,
          class: "small-12 column"

  .row
    .column.small-5.large-4
      = f.button :submit, class: "button small"
    .column.small-7.large-8
      = link_to "Cancel", performances_path, class: "button small disabled"
