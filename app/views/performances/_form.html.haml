= simple_form_for(@performance) do |f|

  = f.input :date, start_year: 2005, end_year: Time.new.year + 1, ampm: true, minute_step: 15

  = f.input :title

  = f.input :location

  = f.input :link

  = f.input :description

  = f.input :banner
  = f.input :delete_banner, as: :boolean

  %h1 Videos
  #performance_videos
    = f.simple_fields_for :performance_videos do |performance_video|
      = render "performance_video_fields", f: performance_video
    .links
      = link_to_add_association "Add Performance Video", f, :performance_videos

  = f.button :submit
